[core]
    editor = vim
    whitespace = trailing-space,space-before-tab,indent-with-non-tab
    excludesfile = ~/.gitignore_global
    autocrlf = input

[push]
    default = simple

[gui]

[merge]
    tool = smerge

[mergetool "smerge"]
    cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
    trustExitCode = true

[alias]

# Platform-specific diff/difftool details live under gitconfig.d/ and are enabled by scripts/git.sh.

lp = "!x() { git log --pretty=tformat:\"%Cred%d %Cgreen%s %Cblue(%cn) %Cred%h\" --graph --branches --decorate -n$1;}; x"
l = "!x() { git --no-pager log --pretty=tformat:\"%Cred%d %Cgreen%s %Cblue(%cn) %Cred%h\" --graph --branches --decorate -n$1;}; x"
ll = "!x() { git --no-pager log --pretty=tformat:\"%Cred%h %Cgreen%s %Cblue(%cn, %cr)\" --decorate -n$1;}; x"
llb = "!x() { git --no-pager log --branches --pretty=tformat:\"%Cred%h %Cgreen%s %Cblue(%cn, %cr)\" --decorate -n$1;}; x"
url = remote get-url --push origin

co = checkout
cb = checkout -b
db = branch -D

s = status

dt = difftool
mt = mergetool

eat = stash --include-untracked
poop = stash pop
fetch = fetch -a --tags

pullr = pull --rebase
diffn = diff --ignore-space-at-eol
amend = commit --amend

# Local overrides live in ~/.gitconfig.local; ./scripts/git.sh makes sure this file exists and keeps the platform include updated.
[include]
	path = /Users/jake/.gitconfig.local
	path = /Users/jake/git/github.com/dotfiles/gitconfig.d/macos.gitconfig
