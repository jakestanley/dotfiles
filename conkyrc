conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Ubuntu Mono:size=10:antialias=false',
    gap_x = 8,
    gap_y = 8,
    minimum_height = 5,
	minimum_width = 240,
    maximum_width = 240,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    stippled_borders = 0,
    update_interval = 5.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
$nodename
$hr
${color grey}Uptime:$color $uptime
${color grey}RAM:
$color $mem/$memmax ($memperc%) ${membar 4}
# ${color grey}Swap:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${color grey}Drives:
$color ${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color grey}Network:
$color IP: ${addr enp0s3}
${color grey}Docker:
$color${exec docker ps --format "{{\" \"}}{{.Names}}"
]]
